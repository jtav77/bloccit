<% if @comment.valid? %>
  $(".js-comments").prepend("<%= escape_javascript(render(@comment)) %>");
  $(".js-comment-form").replaceWith("<%= escape_javascript(render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @new_comment }) %>");
  $('.js-comments-count').html("<%= @post.comments.count %> Comments");
<% else %>
  $(".js-posts-page").prepend("<div class='alert alert-error'><%= flash[:error] %></div>");
  $(".js-comment-form").replaceWith("<%= escape_javascript(render partial: 'comments/form', locals: { topic: @topic, post: @post, comment: @comment }) %>");
<% end %>